{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@acme/ui": ["../../packages/ui"],
      "@acme/utils": ["../../packages/utils"],
      "@acme/db": ["../../packages/db"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/auth/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
